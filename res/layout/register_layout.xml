<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/register_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/register_mailaddress_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="邮箱"
            android:textSize="15sp" >
        </EditText>

        <EditText
            android:id="@+id/register_password_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="密码"
            android:textSize="15sp" >
        </EditText>
        
        <EditText
            android:id="@+id/repeat_password_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="重复密码"
            android:textSize="15sp" >
        </EditText>

        <EditText
            android:id="@+id/regester_name_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="姓名"
            android:textSize="15sp" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/regester_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/register_linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#7EC0EE"
        android:text="注册"
        android:textColor="#757575"
        android:textSize="16sp" />

</RelativeLayout>